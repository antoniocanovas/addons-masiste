<?xml version='1.0' encoding='UTF-8'?>

<odoo>
    <data>
        <template id="report_repairorder_for_client"
            name="Reparaciones sin tabla de productos"
            inherit_id="report_repairorder">
            <xpath expr="//div[@id='informations']" position="replace"/>
            <xpath expr="//table[@class='table table-sm o_main_table']" position="replace"/>
            <xpath expr="//p[@t-field='o.quotation_notes']" position="replace"/>
            <xpath expr="//h2[]/h2[1]" position="after">
                <p t-field="o.quotation_notes"/>
	        </xpath>
        </template>

    </data>
</odoo>