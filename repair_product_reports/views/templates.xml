<?xml version='1.0' encoding='UTF-8'?>

<odoo>
    <data>

        <template id="repair_product_reports.report_repairorder_lines">
            <t t-set="o" t-value="doc"/>
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
                <t t-set="information_block">
                    <strong t-if="o.address_id == o.partner_invoice_id">Invoice and shipping address:</strong>
                    <div t-if="o.partner_invoice_id">
                        <strong t-if="o.address_id != o.partner_invoice_id">Invoice address: </strong>
                        <div t-field="o.partner_invoice_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                        <p t-if="o.partner_invoice_id.vat"><t t-esc="o.company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="o.partner_invoice_id.vat"/></p>
                    </div>
                    <t t-if="o.address_id != o.partner_invoice_id">
                        <strong>Shipping address :</strong>
                        <div t-field="o.address_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                        <p t-if="o.address_id.vat"><t t-esc="o.company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="o.address_id.vat"/></p>
                    </t>
                </t>
                <t t-set="address">
                    <div t-field="o.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                </t>
                <div class="page">
                    <div class="oe_structure"/>

                    <h2>
                        <span t-if="o.state != 'draft'">Repair Order #:</span>
                        <span t-if="o.state == 'draft'">Repair Quotation #:</span>
                        <span t-field="o.name"/>
                    </h2>

                    <div id="informations" class="row mt32 mb32">
                        <div t-if="o.product_id.name" class="col-3 bm-2">
                            <strong>Product to Repair:</strong>
                            <p t-field="o.product_id.name" class="m-0"/>
                        </div>
                        <div class="col-3 bm-2" groups="stock.group_production_lot">
                            <strong>Lot/Serial Number:</strong>
                            <t t-if="o.lot_id">
                                <span t-field="o.lot_id.name"/>
                            </t>
                        </div>
                        <div t-if="o.guarantee_limit" class="col-3 bm-2">
                            <strong>Warranty:</strong>
                            <p t-field="o.guarantee_limit" class="m-0"/>
                        </div>
                        <div class="col-3 bm-2">
                            <strong>Printing Date:</strong>
                            <p t-esc="datetime.datetime.now().strftime('%Y-%m-%d')" t-options="{'widget': 'date'}" class="m-0"/>
                        </div>
                    </div>

                    <table class="table table-sm o_main_table">
                        <thead>
                            <tr>
                                <th>Description</th>
                                <th>SN</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-if="o.repair_line_ids">
                                <tr t-foreach="o.repair_line_ids" t-as="line">
                                    <td>
                                        <span t-field="line.name"/>
                                    </td>
                                    <td>
                                        <span t-field="line.lot_id"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <div class="oe_structure"/>
                </div>
            </t>
        </template>

        <template id="repair_product_reports.report_repairorder_lines_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="repair_product_reports.report_repairorder_lines" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </template>


        <template id="repair_product_reports.report_sticker">
            <t t-set="o" t-value="doc"/>

            <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
            <div class="page">
                <div class="oe_structure"/>
                <!--<div id="Logo" class="row mt32 mb32">
                    <div class="col-3 bm-2">
                        <t t-if="o.company_id.logo">
                            <p></p>

                        </t>
                        <p></p>
                    </div>
                </div>-->
                <div id="sticker" class="row mt32 mb32" style="line-height : 10px;margin-top: 25px;">
                    <div class="col-3 bm-2" style="margin-top: 25px;">
                        <t t-if="o.name">
                            <!--<p><strong>Repair Number:</strong></p>-->
                            <p><strong><span t-field="o.name"/></strong></p>
                        </t>
                    </div>
                    <div class="col-3 bm-2">
                        <!--<p><strong>Customer:</strong></p>-->
                        <p><span style="font-size:11px;" t-field="o.partner_id"/></p>
                    </div>
                    <div class="col-3 bm-2">
                        <!--<p><strong>Date:</strong></p>-->
                        <p><span style="font-size:9px;" t-field="o.create_date"/></p>
                    </div>
                </div>



                <div class="oe_structure"/>
            </div>

        </template>

        <template id="repair_product_reports.report_repairorder_sticker_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="repair_product_reports.report_sticker" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </template>
    </data>
</odoo>